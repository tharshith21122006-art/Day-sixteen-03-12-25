import numpy as np

X = np.array([0,1,2,3])
y = np.array([0,0,1,1])

w, b = 0.0, 0.0
lr = 0.1

def sigmoid(z):
    return 1 / (1 + np.exp(-z))

for _ in range(1000):
    for i in range(len(X)):
        y_pred = sigmoid(w*X[i] + b)
        error = y[i] - y_pred
        w += lr * error * X[i]
        b += lr * error

print("Weight:", w)
print("Bias:", b)
