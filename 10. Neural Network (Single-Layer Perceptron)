import random

X = [(0,0),(0,1),(1,0),(1,1)]
y = [0,0,0,1]

w = [random.random(), random.random()]
b = random.random()
lr = 0.1

for _ in range(1000):
    for x,t in zip(X,y):
        y_pred = 1 if sum(w[i]*x[i] for i in range(2)) + b > 0.5 else 0
        err = t - y_pred
        for i in range(2):
            w[i] += lr * err * x[i]
        b += lr * err

print("Weights:", w)
print("Bias:", b)
