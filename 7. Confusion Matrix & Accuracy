y_true = [1,0,1,1,0]
y_pred = [1,0,0,1,0]

tp = tn = fp = fn = 0
for t,p in zip(y_true,y_pred):
    if t==1 and p==1: tp+=1
    elif t==0 and p==0: tn+=1
    elif t==0 and p==1: fp+=1
    elif t==1 and p==0: fn+=1

accuracy = (tp+tn)/len(y_true)
print("Confusion Matrix:")
print(tp, fp)
print(fn, tn)
print("Accuracy:", accuracy)
